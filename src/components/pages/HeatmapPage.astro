---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CountryHeatmap from '../CountryHeatmap';
import { ui, defaultLang } from '../../i18n/ui';

const { lang = defaultLang } = Astro.props;
const t = ui[lang as keyof typeof ui] || ui[defaultLang];
---

<BaseLayout
  title={t['heatmap.title']}
  description={t['heatmap.description']}
  lang={lang}
>
  <section
    class="page-hero space-y-6 rounded-3xl border border-white/70 bg-white/90 p-8 shadow-2xl ring-1 ring-indigo-100 backdrop-blur"
  >
    <div class="space-y-3 text-center md:text-left">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-500">
        {t['heatmap.eyebrow']}
      </p>
      <h1 class="text-3xl font-semibold text-slate-900">{t['heatmap.h1']}</h1>
      <div class="space-y-4 text-base text-slate-600">
        <p>
          {t['heatmap.p1']}
        </p>
        <p>
          {t['heatmap.p2']}
        </p>
      </div>
    </div>
    <CountryHeatmap client:only="react" />
  </section>
</BaseLayout>
