---
import BaseLayout from '../layouts/BaseLayout.astro';
import papers from '../../data/papers.normalized.json';
import { getPaperUrl } from '~/utils/format';
import { getAboutUrl, getBrowseUrl, getCollaborateUrl, getHeatmapUrl } from '~/utils/siteUrls';
import type { Paper } from '~/utils/types';
const typedPapers = papers as Paper[];
const featured = typedPapers.slice(0, 3);
const browseHref = getBrowseUrl();
const aboutHref = getAboutUrl();
const heatmapHref = getHeatmapUrl();
const collaborateHref = getCollaborateUrl();
const totalPapers = typedPapers.length;
const latestYear = typedPapers.reduce((max, paper) => Math.max(max, paper.year), 0);
const recentlyAdded = Math.min(typedPapers.length, 15);
const journals = new Set(typedPapers.map((paper) => paper.journal));
const stats = [
  { label: 'Total papers', value: totalPapers.toLocaleString() },
  { label: 'Latest publication year', value: latestYear },
  { label: 'Recently added', value: recentlyAdded },
  { label: 'Journals represented', value: journals.size }
];
---

<BaseLayout
  title="OHCA Survivorship Repository"
  description="Evidence summaries for life after cardiac arrest"
>
  <section class="space-y-12">
    <div
      class="relative overflow-hidden rounded-3xl border border-white/70 bg-white/90 p-8 shadow-2xl ring-1 ring-indigo-100 backdrop-blur"
    >
      <div class="grid gap-10 lg:grid-cols-[1.1fr,0.9fr] lg:items-center">
        <div class="space-y-6">
          <p
            class="inline-flex items-center gap-2 rounded-full bg-indigo-50 px-4 py-1 text-sm font-semibold text-indigo-700"
          >
            <span
              class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 text-white shadow-md"
            >
              <svg aria-hidden="true" class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                ></path>
              </svg>
            </span>
            Survivor-centered evidence hub
          </p>
          <h1 class="text-4xl font-semibold tracking-tight text-slate-900 sm:text-5xl">
            Out-of-hospital cardiac arrest survivorship repository
          </h1>
          <p class="text-lg leading-relaxed text-slate-600">
            Explore curated research on cognition, psychological health, quality of life,
            participation, and caregiver experiences after cardiac arrest. Search, filter, and
            surface the evidence base to support multidisciplinary recovery pathways.
          </p>
          <div class="flex flex-wrap gap-3">
            <a
              class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 px-5 py-2.5 text-sm font-semibold text-white shadow-lg transition hover:-translate-y-0.5 hover:bg-indigo-500 hover:shadow-xl"
              href={browseHref}
            >
              <svg
                aria-hidden="true"
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1010.5 18a7.5 7.5 0 006.15-3.35z"></path>
              </svg>
              Browse the repository
            </a>
            <a
              class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-5 py-2.5 text-sm font-semibold text-slate-700 transition hover:-translate-y-0.5 hover:border-indigo-200 hover:text-indigo-700"
              href={aboutHref}
            >
              Learn about the project
            </a>
            <a
              class="inline-flex items-center gap-2 rounded-xl border border-indigo-100 bg-indigo-50 px-5 py-2.5 text-sm font-semibold text-indigo-700 transition hover:-translate-y-0.5 hover:border-indigo-300 hover:bg-white"
              href={heatmapHref}
            >
              Heat Map
            </a>
            <a
              class="inline-flex items-center gap-2 rounded-xl border border-rose-100 bg-rose-50 px-5 py-2.5 text-sm font-semibold text-rose-700 transition hover:-translate-y-0.5 hover:border-rose-300 hover:bg-white"
              href={collaborateHref}
            >
              Collaborate
            </a>
          </div>
        </div>
        <div
          class="rounded-2xl border border-indigo-100 bg-gradient-to-br from-indigo-50 via-white to-slate-50 p-6 shadow-inner"
        >
          <h2 class="text-lg font-semibold text-slate-900">Key themes we curate</h2>
          <ul class="mt-5 space-y-4 text-sm text-slate-600">
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-3 w-3 rounded-full bg-indigo-500"></span>
              Cognitive screening, neuropsychology, and rehabilitation
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-3 w-3 rounded-full bg-purple-500"></span>
              Emotional recovery, fatigue, and psychological well-being
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-3 w-3 rounded-full bg-emerald-500"></span>
              Participation, return-to-work, and quality of life
            </li>
            <li class="flex items-start gap-3">
              <span class="mt-1 inline-flex h-3 w-3 rounded-full bg-amber-500"></span>
              Caregiver support, peer networks, and shared decision making
            </li>
          </ul>
        </div>
      </div>
    </div>

    <section
      class="rounded-3xl border border-white/70 bg-white/90 p-6 shadow-xl ring-1 ring-indigo-100 backdrop-blur"
    >
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {
          stats.map((item) => (
            <div
              class="flex flex-col items-center rounded-2xl bg-slate-50/80 px-4 py-6 text-center shadow-inner"
              key={item.label}
            >
              <span class="text-3xl font-bold text-indigo-600">{item.value}</span>
              <span class="mt-2 text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">
                {item.label}
              </span>
            </div>
          ))
        }
      </div>
    </section>

    <section
      class="rounded-3xl border border-white/70 bg-white/90 p-8 shadow-xl ring-1 ring-indigo-100 backdrop-blur"
    >
      <form class="space-y-6" action={browseHref} method="get">
        <div class="flex flex-col gap-4 md:flex-row">
          <label class="sr-only" htmlFor="home-search">Search the repository</label>
          <input
            id="home-search"
            class="flex-1 rounded-2xl border-2 border-slate-200 bg-white px-5 py-3 text-base shadow-inner transition focus:border-indigo-400 focus:ring-indigo-200"
            type="search"
            name="q"
            placeholder="Search papers by title, author, or keywords"
            aria-label="Search papers"
          />
          <button
            class="inline-flex items-center justify-center gap-2 rounded-2xl bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg transition hover:-translate-y-0.5 hover:bg-indigo-500 hover:shadow-xl"
            type="submit"
          >
            <svg
              aria-hidden="true"
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1010.5 18a7.5 7.5 0 006.15-3.35z"></path>
            </svg>
            Search
          </button>
        </div>
        <div class="grid gap-4 md:grid-cols-3">
          <div>
            <label class="mb-2 block text-sm font-semibold text-slate-600" htmlFor="home-year"
              >Year</label
            >
            <select
              id="home-year"
              class="w-full rounded-2xl border-2 border-slate-200 bg-white px-4 py-3 text-sm font-medium text-slate-700 shadow-inner focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-200"
              name="years"
            >
              <option value="">All years</option>
              <option value={`${latestYear}:${latestYear}`}>{latestYear}</option>
              <option value={`${latestYear - 1}:${latestYear}`}
                >{latestYear - 1}â€“{latestYear}</option
              >
              <option value={`${latestYear - 4}:${latestYear}`}>Last 5 years</option>
            </select>
          </div>
          <div>
            <label class="mb-2 block text-sm font-semibold text-slate-600" htmlFor="home-domain"
              >Topic</label
            >
            <select
              id="home-domain"
              class="w-full rounded-2xl border-2 border-slate-200 bg-white px-4 py-3 text-sm font-medium text-slate-700 shadow-inner focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-200"
              name="domain"
            >
              <option value="">All topics</option>
              <option value="Cognitive">Cognition</option>
              <option value="Psychological">Psychological health</option>
              <option value="Qol">Quality of life</option>
              <option value="Participation">Participation & return-to-work</option>
              <option value="Caregiver">Caregiver experience</option>
            </select>
          </div>
          <div>
            <label class="mb-2 block text-sm font-semibold text-slate-600" htmlFor="home-quick"
              >Quick view</label
            >
            <select
              id="home-quick"
              class="w-full rounded-2xl border-2 border-slate-200 bg-white px-4 py-3 text-sm font-medium text-slate-700 shadow-inner focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-200"
              name="quick"
            >
              <option value="">Relevance & newest</option>
              <option value="Cognitive">Highlight cognition</option>
              <option value="Psychological">Highlight psychological</option>
              <option value="QoL">Highlight quality of life</option>
              <option value="Participation/RTW">Highlight participation</option>
              <option value="Caregiver">Highlight caregiver</option>
            </select>
          </div>
        </div>
      </form>
    </section>

    <section class="space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-semibold text-slate-900">Recent publications</h2>
        <a
          class="inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 transition hover:text-indigo-500"
          href={browseHref}
        >
          View all papers
          <svg
            aria-hidden="true"
            class="h-4 w-4"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
      <div class="grid gap-6 lg:grid-cols-3">
        {
          featured.map((paper) => (
            <article
              class="group relative flex h-full flex-col overflow-hidden rounded-3xl border border-white/70 bg-white/90 p-6 shadow-xl ring-1 ring-indigo-100 transition hover:-translate-y-1 hover:shadow-2xl"
              key={paper.id}
            >
              <div class="flex flex-wrap items-start justify-between gap-3">
                <h3 class="text-lg font-semibold text-slate-900 transition group-hover:text-indigo-600">
                  <a href={getPaperUrl(paper)}>{paper.title}</a>
                </h3>
                <div class="flex flex-wrap gap-2">
                  <span class="rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-700">
                    {paper.year}
                  </span>
                  {(paper.domains ?? []).slice(0, 1).map((domain) => (
                    <span
                      class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600"
                      key={domain}
                    >
                      {domain}
                    </span>
                  ))}
                </div>
              </div>
              <p class="mt-3 text-sm text-slate-600">
                {paper.normalizedAuthors.slice(0, 3).join(', ')} et al.
              </p>
              <p class="mt-2 text-sm font-medium text-indigo-700">{paper.journal}</p>
              <p class="mt-3 line-clamp-4 text-sm leading-relaxed text-slate-600">
                {paper.abstract}
              </p>
              <div class="mt-5 flex flex-wrap items-center justify-between gap-3 border-t border-slate-200/70 pt-4">
                <div class="flex flex-wrap gap-2">
                  <a
                    class="inline-flex items-center gap-2 rounded-xl border border-indigo-100 bg-indigo-50 px-3 py-1.5 text-xs font-semibold text-indigo-700 transition hover:border-indigo-200 hover:bg-indigo-100"
                    href={getPaperUrl(paper)}
                  >
                    View details
                  </a>
                  {paper.links?.pubmed && (
                    <a
                      class="inline-flex items-center gap-2 rounded-xl border border-slate-200 px-3 py-1.5 text-xs font-semibold text-slate-600 transition hover:border-indigo-200 hover:text-indigo-600"
                      href={paper.links.pubmed}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      PubMed
                    </a>
                  )}
                </div>
                <span class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">
                  {paper.country ?? 'Global'}
                </span>
              </div>
            </article>
          ))
        }
      </div>
    </section>
  </section>
</BaseLayout>
