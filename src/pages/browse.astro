---
import BaseLayout from '../layouts/BaseLayout.astro';
import BrowseClient from '../components/browse/BrowseClient.tsx';
import papers from '../../data/papers.normalized.json';
import type { Paper } from '~/utils/types';
import { h } from 'preact';
import HeroCard from '~/components/HeroCard';
const typedPapers = papers as Paper[];
const totalPapers = typedPapers.length;
const uniqueCountries = Array.from(
  new Set(typedPapers.map((paper) => paper.country).filter(Boolean))
).length;
const latestPaperDate = typedPapers.reduce<Date | null>((latest, paper) => {
  if (!paper.date) return latest;

  const parsedDate = new Date(paper.date);
  if (Number.isNaN(parsedDate.getTime())) return latest;

  if (!latest || parsedDate > latest) {
    return parsedDate;
  }

  return latest;
}, null);
const lastUpdatedLabel = latestPaperDate
  ? latestPaperDate.toLocaleString('en-US', { month: 'long', year: 'numeric' })
  : 'Unknown';
const evidenceSnapshot = h(
  'div',
  { class: 'rounded-2xl border border-white/20 bg-white/5 p-6 shadow-inner backdrop-blur' },
  [
    h('h2', { class: 'text-lg font-semibold' }, 'Evidence snapshot'),
    h('dl', { class: 'mt-6 space-y-4 text-sm' }, [
      h('div', { class: 'flex items-baseline justify-between' }, [
        h('dt', { class: 'text-white/70' }, 'Papers'),
        h('dd', { class: 'text-3xl font-semibold' }, totalPapers.toLocaleString())
      ]),
      h('div', { class: 'flex items-baseline justify-between' }, [
        h('dt', { class: 'text-white/70' }, 'Countries'),
        h('dd', { class: 'text-3xl font-semibold' }, uniqueCountries)
      ]),
      h('div', { class: 'flex items-baseline justify-between' }, [
        h('dt', { class: 'text-white/70' }, 'Last update'),
        h('dd', { class: 'text-xl font-semibold' }, lastUpdatedLabel)
      ])
    ])
  ]
);
---

<BaseLayout
  title="Browse papers"
  description="Searchable repository of OHCA survivorship literature"
>
  <section class="space-y-12 px-4 py-12 sm:px-6 lg:px-8">
    <HeroCard
      eyebrow="Dynamic filtering workspace"
      title="Browse the survivorship evidence base"
      subtitle="Search functionality includes filtering by author, title, institution, and country, with abstracts (where available) and source links provided."
      rightSlot={evidenceSnapshot}
      variant="gradient"
    />

    <div class="rounded-3xl border border-white/70 bg-white/95 p-8 shadow-2xl ring-1 ring-indigo-100 backdrop-blur">
      <div class="space-y-6">
        <p class="text-base leading-relaxed text-slate-600">
          <strong class="text-slate-900">Navigate hundreds of survivorship studies in a single view.</strong>
          Mix and match search, filters, and visual cues to zero-in on methods, populations, or outcomes that matter most.
        </p>
        <div class="grid gap-4 sm:grid-cols-2">
          <div class="rounded-2xl border border-indigo-100 bg-indigo-50/70 p-4 shadow-sm">
            <p class="text-sm font-semibold text-indigo-700">Instant refinement</p>
            <p class="mt-1 text-sm text-indigo-900/80">Adjust facets and see results update without losing your spot in the evidence trail.</p>
          </div>
          <div class="rounded-2xl border border-purple-100 bg-purple-50/70 p-4 shadow-sm">
            <p class="text-sm font-semibold text-purple-700">Shareable states</p>
            <p class="mt-1 text-sm text-purple-900/80">Copy links that preserve every filter so collaborators can pick up where you left off.</p>
          </div>
          <div class="rounded-2xl border border-emerald-100 bg-emerald-50/70 p-4 shadow-sm sm:col-span-2">
            <p class="text-sm font-semibold text-emerald-700">Signal-rich summaries</p>
            <p class="mt-1 text-sm text-emerald-900/80">Surface key metadata—domains, geographies, designs—to contextualize findings at a glance.</p>
          </div>
        </div>
      </div>
    </div>

    {
      /*
        IMPORTANT:
        - Below this comment, KEEP the existing code that renders the survivorship papers list,
          filters, tables, or cards. Do not remove or change that logic.
        - Only the hero + methods explanation above should be new.
      */
    }

    <div
      class="rounded-3xl border border-white/70 bg-white/95 p-6 shadow-2xl ring-1 ring-indigo-100 backdrop-blur"
    >
      <BrowseClient client:load papers={typedPapers} />
    </div>
  </main>
</BaseLayout>
