---
import {
  getAboutUrl,
  getBrowseUrl,
  getCollaborateUrl,
  getHeatmapUrl,
  getOngoingStudiesUrl,
  getSiteUrl
} from '~/utils/siteUrls';
import { languages, ui, defaultLang } from '~/i18n/ui';
import '../styles/global.css';

const {
  title = 'Cardiac Arrest Research Hub',
  description = 'Knowledge hub for survivorship after cardiac arrest',
  lang = defaultLang
} = Astro.props;

const t = ui[lang as keyof typeof ui] || ui[defaultLang];

const homeHref = getSiteUrl('', lang);
const browseHref = getBrowseUrl(lang);
const aboutHref = getAboutUrl(lang);
const heatmapHref = getHeatmapUrl(lang);
const privacyHref = getSiteUrl('privacy', lang);
const collaborateHref = getCollaborateUrl(lang);
const ongoingStudiesHref = getOngoingStudiesUrl(lang);

const currentPath = Astro.url.pathname;
const getPathForLang = (targetLang: string) => {
  // Simple replacement for now, assuming structure /lang/... or /...
  // If current lang is default (en) and we switch to fr, we need to prepend /fr
  // If current lang is fr and we switch to en, we need to remove /fr
  // If current lang is fr and we switch to es, we need to replace /fr with /es

  // Note: This logic assumes prefixDefaultLocale: false

  const segments = currentPath.split('/').filter(Boolean);
  const firstSegment = segments[0];

  const isCurrentLangDefault = lang === defaultLang;
  const isTargetLangDefault = targetLang === defaultLang;

  if (isCurrentLangDefault) {
     if (isTargetLangDefault) return currentPath;
     return `/${targetLang}${currentPath === '/' ? '' : currentPath}`;
  } else {
     // current path starts with /lang
     const pathWithoutLang = segments.slice(1).join('/');
     if (isTargetLangDefault) return `/${pathWithoutLang}`;
     return `/${targetLang}/${pathWithoutLang}`;
  }
};

---

<!doctype html>
<html lang={lang} class="min-h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <script
      data-goatcounter="https://brickfielder.goatcounter.com/count"
      async
      src="https://gc.zgo.at/count.js"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="min-h-screen bg-slate-50 text-slate-600 antialiased dark:bg-slate-950 dark:text-slate-100"
  >
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:rounded-md focus:bg-teal-600 focus:px-3 focus:py-2 focus:text-white"
    >
      {t['nav.skip']}
    </a>
    <header class="relative isolate overflow-hidden bg-slate-900 text-white">
      <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-slate-900/95 to-slate-950">
      </div>
      <div
        class="absolute inset-0 opacity-20 bg-[radial-gradient(#2dd4bf_1px,transparent_1px)] bg-[size:40px_40px]"
      >
      </div>
      <nav class="relative border-b border-white/10">
        <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-6 lg:px-8">
          <a
            class="flex items-center gap-2 text-sm font-medium text-slate-200 transition hover:text-white"
            href={homeHref}
          >
            <span>Cardiac Arrest Research Hub</span>
          </a>
          <div class="flex items-center gap-4">
            <div
              class="hidden items-center gap-6 text-sm font-medium text-white md:flex"
              aria-label="Primary"
            >
              <a class="text-white transition hover:text-teal-200" href={homeHref}>{t['nav.home']}</a>
              <a class="text-white transition hover:text-teal-200" href={aboutHref}>{t['nav.about']}</a>
              <a class="text-white transition hover:text-teal-200" href={browseHref}>{t['nav.browse']}</a>
              <a class="text-white transition hover:text-teal-200" href={collaborateHref}>{t['nav.collaborate']}</a>
              <a class="text-white transition hover:text-teal-200" href={heatmapHref}>{t['nav.heatmap']}</a>
              <a class="text-white transition hover:text-teal-200" href={ongoingStudiesHref}>{t['nav.ongoing']}</a>
            </div>

             <!-- Language Switcher Desktop -->
            <div class="hidden md:flex items-center gap-2 ml-4">
              {Object.entries(languages).map(([l, label]) => (
                <a
                  href={getPathForLang(l)}
                  class={`text-xs font-medium px-2 py-1 rounded transition ${
                    lang === l
                      ? 'bg-white/20 text-white'
                      : 'text-slate-400 hover:text-white hover:bg-white/10'
                  }`}
                  aria-label={`Switch to ${label}`}
                >
                  {l.toUpperCase()}
                </a>
              ))}
            </div>

            <button
              class="inline-flex items-center justify-center rounded-full border border-white/30 bg-white/10 p-2 text-white shadow-inner transition hover:border-teal-200 md:hidden"
              type="button"
              aria-label="Toggle navigation"
              data-mobile-nav
            >
              <svg
                aria-hidden="true"
                class="h-5 w-5"
                fill="none"
                stroke="currentColor"
                stroke-width="1.8"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 7h16M4 12h16M4 17h16"
                ></path>
              </svg>
            </button>
          </div>
        </div>
      </nav>
      {Astro.slots.has('hero') && (
        <div class="relative mx-auto max-w-5xl px-6 pb-20 pt-16 text-center lg:px-8">
          <slot name="hero" />
        </div>
      )}
    </header>
    <main id="main" class="bg-slate-50 text-slate-600 dark:bg-slate-950 dark:text-slate-100">
      <slot />
    </main>
    <footer
      class="border-t border-slate-200 bg-white py-12 dark:border-slate-800 dark:bg-slate-900"
    >
      <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
        <div class="text-2xl mb-4">ðŸ’™</div>
        <p class="text-sm text-slate-500 dark:text-slate-300">
          Â© {new Date().getFullYear()} {t['footer.copyright']}
        </p>
        <div
          class="mt-6 flex justify-center gap-6 text-sm font-medium text-slate-600 dark:text-slate-200"
        >
          <a class="transition hover:text-teal-600" href={aboutHref}>{t['nav.about']}</a>
          <a
            class="transition hover:text-teal-600"
            href="mailto:hello@caresearchhub.org"
          >
            {t['footer.contact']}
          </a>
          <a class="transition hover:text-teal-600" href={privacyHref}>{t['footer.privacy']}</a>
        </div>
      </div>
    </footer>
    <nav
      class="pointer-events-none fixed inset-0 z-50 hidden bg-slate-950/60 opacity-0 backdrop-blur-sm transition-opacity duration-200 md:hidden"
      aria-label="Mobile"
      data-mobile-panel
    >
      <div class="h-full w-full" data-mobile-overlay></div>
      <div
        class="absolute right-0 top-0 flex h-full w-72 translate-x-full flex-col gap-2 border-l border-white/10 bg-slate-900 px-6 py-6 text-sm font-semibold text-white shadow-2xl transition-transform duration-300 ease-out will-change-transform sm:w-80"
        data-mobile-drawer
      >
        <div class="mb-2 flex items-center justify-between">
          <span class="text-base font-semibold text-white">Menu</span>
          <button
            class="rounded-full border border-white/15 bg-white/5 p-2 text-white transition hover:border-white/30 hover:bg-white/10"
            type="button"
            aria-label="Close navigation"
            data-mobile-close
          >
            <svg
              aria-hidden="true"
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 6l12 12M6 18L18 6"></path>
            </svg>
          </button>
        </div>
        <div class="flex flex-col divide-y divide-white/10">
          <a class="px-1 py-3 text-left text-white transition hover:text-teal-200" href={homeHref}>{t['nav.home']}</a>
          <a class="px-1 py-3 text-left text-white transition hover:text-teal-200" href={aboutHref}>{t['nav.about']}</a>
          <a class="px-1 py-3 text-left text-white transition hover:text-teal-200" href={browseHref}>{t['nav.browse']}</a>
          <a class="px-1 py-3 text-left text-white transition hover:text-teal-200" href={collaborateHref}>{t['nav.collaborate']}</a>
          <a class="px-1 py-3 text-left text-white transition hover:text-teal-200" href={heatmapHref}>{t['nav.heatmap']}</a>
          <a class="px-1 py-3 text-left text-white transition hover:text-teal-200" href={ongoingStudiesHref}>{t['nav.ongoing']}</a>
        </div>
         <!-- Language Switcher Mobile -->
        <div class="mt-4 border-t border-white/10 pt-4">
            <span class="text-xs font-medium text-slate-400 block mb-2 px-1">Language</span>
            <div class="flex flex-wrap gap-2 px-1">
              {Object.entries(languages).map(([l, label]) => (
                <a
                  href={getPathForLang(l)}
                  class={`text-sm px-2 py-1 rounded transition ${
                     lang === l
                      ? 'bg-white/20 text-white'
                      : 'text-slate-400 hover:text-white hover:bg-white/10'
                  }`}
                >
                  {label}
                </a>
              ))}
            </div>
        </div>
      </div>
    </nav>
    <script is:inline>
      const mobileToggle = document.querySelector('[data-mobile-nav]');
      const mobilePanel = document.querySelector('[data-mobile-panel]');
      const mobileDrawer = document.querySelector('[data-mobile-drawer]');
      const mobileOverlay = document.querySelector('[data-mobile-overlay]');
      const mobileClose = document.querySelector('[data-mobile-close]');

      const openMobileNav = () => {
        if (!mobilePanel || !mobileDrawer || !mobileToggle) return;
        mobilePanel.classList.remove('hidden');
        window.requestAnimationFrame(() => {
          mobilePanel.classList.remove('opacity-0');
          mobilePanel.classList.remove('pointer-events-none');
          mobileDrawer.classList.remove('translate-x-full');
          mobileToggle.setAttribute('aria-expanded', 'true');
        });
      };

      const closeMobileNav = () => {
        if (!mobilePanel || !mobileDrawer || !mobileToggle) return;
        mobilePanel.classList.add('opacity-0');
        mobilePanel.classList.add('pointer-events-none');
        mobileDrawer.classList.add('translate-x-full');
        mobileToggle.setAttribute('aria-expanded', 'false');
        window.setTimeout(() => mobilePanel.classList.add('hidden'), 200);
      };

      mobileToggle?.addEventListener('click', openMobileNav);
      mobileOverlay?.addEventListener('click', closeMobileNav);
      mobileClose?.addEventListener('click', closeMobileNav);
      mobilePanel?.querySelectorAll('a').forEach((link) => {
        link.addEventListener('click', closeMobileNav);
      });
      mobilePanel?.addEventListener('keyup', (event) => {
        if (event.key === 'Escape') closeMobileNav();
      });
    </script>
  </body>
</html>
